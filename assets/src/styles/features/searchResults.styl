.makaira-search__results
  margin-bottom 20px
  padding-bottom 20px 
  border-bottom 1px solid #eee

.makaira-search__result-header
  font-size 18px
  margin 0

.makaira-search__result-list
  display flex
  flex-wrap wrap
  list-style-type none
  padding-left 10px
  margin 0

.makaira-search__result-item
  position relative
  flex 0 0 20%
  margin-top 10px
  margin 10px 10px 0
  padding 0 12px
  white-space nowrap

  &:before
    content '>'
    display block
    position absolute
    top -1px
    left 0
    color #009EC0


